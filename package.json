{
  "name": "waper",
  "private": true,
  "version": "0.0.0",
  "main": "dist/electron/main/index.js",
  "scripts": {
    "dev": "vite",
    "package": "rm -rf dist && vite build",
    "preview": "vite preview",
    "start": "electron .",
    "build": "rm -rf dist && vite build && electron-builder"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^1.1.4",
    "axios": "^0.26.0",
    "crypto-js": "^4.1.1",
    "element-plus": "^2.1.7",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.13",
    "qs": "^6.10.3",
    "vue": "^3.2.32",
    "vue-emitter-bus": "^1.0.3",
    "vue-ls-plus": "^1.0.0",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.2.31",
    "consola": "^2.15.3",
    "electron": "^19.0.0-alpha.1",
    "electron-builder": "^23.0.3",
    "esbuild": "^0.14.36",
    "node-sass": "^7.0.1",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.4.3",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "sass-resources-loader": "^2.2.4",
    "typescript": "^4.6.3",
    "unplugin-auto-import": "^0.6.1",
    "unplugin-vue-components": "^0.17.20",
    "vite": "^2.9.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-electron": "^0.4.1",
    "vite-plugin-restart": "^0.1.1",
    "vite-plugin-style-import": "^2.0.0"
  },
  "build": {
    "appId": "com.yhyzgn.waper",
    "productName": "waper",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": true,
      "extendInfo": {
        "NSAppleEventsUsageDescription": "Let me use Apple Events.",
        "NSCameraUsageDescription": "Let me use the camera.",
        "NSScreenCaptureDescription": "Let me take screenshots."
      }
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "rpm",
        "deb"
      ],
      "desktop": {
        "StartupNotify": "false",
        "Encoding": "UTF-8",
        "MimeType": "x-scheme-handler/deeplink"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/icon.ico",
      "uninstallerIcon": "./build/icons/icon.ico",
      "installerHeaderIcon": "./build/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "waper"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "deb": {
      "priority": "optional"
    },
    "rpm": {
      "fpm": [
        "--before-install",
        "installer/linux/before-install.tpl"
      ]
    }
  }
}
